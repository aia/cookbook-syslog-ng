filter f_kernel {
  facility(kern);
};

filter f_default {
  level(info..emerg) and
  not (facility(mail)
  or facility(authpriv)
  or facility(cron));
};

filter f_auth {
  facility(authpriv);
};

filter f_mail {
  facility(mail);
};

filter f_emergency {
  level(emerg);
};

filter f_news {
  facility(uucp) or
  (facility(news) and level(crit..emerg));
};

filter f_boot {
  facility(local7);
};

filter f_cron {
  facility(cron);
};

filter f_dbg {
  level(debug);
};

filter f_notdbg {
  not (level(debug));
};

