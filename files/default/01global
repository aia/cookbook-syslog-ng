source s_sys {
  file ("/proc/kmsg" log_prefix("kernel: "));
  unix-stream ("/dev/log");
  internal();
};

# TCP source example
# source s_tcp {
# tcp(ip(0.0.0.0) port(2000) max-connections(300));
# };

# UDP source exaple
# source s_udp {
# udp(ip(127.0.0.1) port(514));
